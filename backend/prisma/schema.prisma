// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ============================================
// COMPANY MODEL - Multi-tenant support
// ============================================
model Company {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  phone       String?
  address     String?
  taxId       String?  // CUI/CIF for Romanian companies
  logo        String?
  isActive    Boolean  @default(true)
  
  // Subscription settings
  plan        String   @default("FREE") // FREE, BASIC, PREMIUM
  maxDrivers  Int      @default(5)
  maxVehicles Int      @default(5)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  users         User[]
  tasks         Task[]
  vehicles      Vehicle[]
  messages      Message[]
  notifications Notification[]

  @@map("companies")
}

// ============================================
// VEHICLE MODEL - Fleet management
// ============================================
model Vehicle {
  id            String    @id @default(cuid())
  
  // Vehicle info
  type          String    // Truck, Van, Car
  plate         String    @unique
  model         String
  year          Int?
  capacity      String?   // e.g., "3.5t", "20m3"
  
  // Maintenance
  lastService   DateTime?
  nextService   DateTime?
  insuranceExpiry DateTime?
  
  // Status
  isActive      Boolean   @default(true)
  
  // Relations
  companyId     String
  company       Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  assignedToId  String?   @unique
  assignedTo    User?     @relation(fields: [assignedToId], references: [id], onDelete: SetNull)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("vehicles")
}

// ============================================
// USER MODEL - Updated for multi-tenant
// ============================================
model User {
  id          String   @id @default(cuid())
  personalId  String   @unique
  password    String
  name        String
  email       String?  @unique
  phone       String?
  role        String   @default("DRIVER") // SUPER_ADMIN, COMPANY_ADMIN, DRIVER
  photoUrl    String?
  isActive    Boolean  @default(true)
  
  // Company association (NULL for SUPER_ADMIN)
  companyId   String?
  company     Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  // Documents
  licenseNumber      String?
  licenseExpiry      DateTime?
  
  // Preferences
  preferredZones     String?  // JSON string of preferred zones
  notificationsEnabled Boolean @default(true)
  language           String   @default("ro")
  darkMode           Boolean  @default(false)
  pushToken          String?  // Expo push notification token
  emailNotifications Boolean  @default(true)
  pushNotifications  Boolean  @default(true)
  
  // Statistics (calculated fields)
  totalEarnings      Float    @default(0)
  totalTasks         Int      @default(0)
  completedTasks     Int      @default(0)
  rating             Float?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  assignedVehicle Vehicle?
  assignedTasks   Task[]         @relation("AssignedTasks")
  createdTasks    Task[]         @relation("CreatedTasks")
  messages        Message[]
  notifications   Notification[]

  @@map("users")
}

// ============================================
// TASK MODEL - Updated for multi-tenant
// ============================================
model Task {
  id            String     @id @default(cuid())
  title         String
  description   String?
  scheduledDate DateTime
  scheduledTime String?
  status        String     @default("PENDING")
  price         Float
  location      String?
  latitude      Float?     // Task location latitude
  longitude     Float?     // Task location longitude
  notes         String?
  
  // Completion tracking
  completedAt   DateTime?
  actualEarnings Float?
  driverNotes   String?
  rating        Float?
  
  // Company association
  companyId     String
  company       Company    @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  // Relations
  assignedToId  String?
  assignedTo    User?      @relation("AssignedTasks", fields: [assignedToId], references: [id], onDelete: SetNull)
  
  createdById   String
  createdBy     User       @relation("CreatedTasks", fields: [createdById], references: [id])
  
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@map("tasks")
}

// ============================================
// MESSAGE MODEL - Updated for multi-tenant
// ============================================
model Message {
  id        String   @id @default(cuid())
  content   String
  isRead    Boolean  @default(false)
  fromAdmin Boolean  @default(false)
  
  // Company association
  companyId String
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@map("messages")
}

// ============================================
// NOTIFICATION MODEL - Updated for multi-tenant
// ============================================
model Notification {
  id        String   @id @default(cuid())
  
  // Company association
  companyId String
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String
  message   String
  data      String?  // JSON string for additional data
  
  isRead    Boolean  @default(false)
  readAt    DateTime?
  
  createdAt DateTime @default(now())
  
  @@map("notifications")
}
